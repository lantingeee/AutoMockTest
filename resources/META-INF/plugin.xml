<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>AutoMockTestPlugin</name>
  <version>1.0</version>
  <vendor email="lantingeee@gmail.com" url="http://www.yourcompany.com">lantingeee</vendor>

  <description><![CDATA[
      Automatically generate unit test code, dependency powermock <br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->

  </extensions>

  <actions>
    <!-- Add your actions here -->

    <action id="GenerateMockTest"
          class="com.lantingeee.ideaplugin.ShowMockTestDialogAction" description="Auto generate mock unit code tests">
      <keyboard-shortcut keymap="$default" first-keystroke="control alt G"/>
      <add-to-group group-id="JavaGenerateGroup1" anchor="last"/>
    </action>

  </actions>

</idea-plugin>